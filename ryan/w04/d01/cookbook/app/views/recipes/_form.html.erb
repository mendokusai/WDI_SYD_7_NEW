<% unless @recipe.errors.empty? %>
	<ul id="errors">
	<% @recipe.errors.full_messages.each do |error| %>
		<li>Error: <%= error %></li>
		<% end %>
	</ul>
	<% end %>

<%= form_for @recipe do |f| %>
	
	<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name %>
	</div>

	<div class="form-group">
	<%= f.label :course %>
	<%= f.text_field :course %>
	</div>

	<div class="form-group">
	<%= f.label :serving_size %>
	<%= f.text_field :serving_size %>
	</div>
	
	<div class="form-group">
	<%= f.label :instructions %>
	<%= f.text_area :instructions %>
	</div>

	<div class="form-group">
	<%= f.label :image %>
	<%= f.url_field :image %>
	</div>

	<div class="form-group">
	<%= f.label :book_id %>
	<%= f.collection_select :book_id, Book.all, :id, :title %>
	</div>

	<div class="form-group">
	<p><%= collection_check_boxes(:recipe, :ingredient_ids, 
													Ingredient.all, :id, :name) %></p>
	</div>
	<div class="form-group">
	<%= f.submit %>
	</div>

<% end %>

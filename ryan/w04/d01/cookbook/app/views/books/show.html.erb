<%= image_tag @book.image %>

<h2><%= @book.title %></h2>
<p>by <%= @book.chef %></p>

<div id="show_recipes">
<h3>Recipes in the Collection:</h3>
<ul>
<% @book.recipes.each do |recipe| %>
	<li><%= link_to recipe, @recipe do |x| %></li>
	<%= recipe.name %>
	<% end %>
<% end %>
</div>
</ul>
<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to "Delete", book_path(@book),
	method: :delete, data: { confirm: 'Are you sure?' } %>
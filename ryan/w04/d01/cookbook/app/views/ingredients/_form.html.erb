
<% if @ingredient.errors %>
	<ul id="errors">
	<% @ingredient.errors.full_messages.each do |error| %>
		<li>Error: <%= error %></li>
		<% end %>
	</ul>
	<% end %>

<%= form_for @ingredient do |f| %>
	
	<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name %>
	</div>

	<div class="form-group">
	<%= f.label :measurement %>
	<%= f.text_field :measurement %>
	</div>

	<div class="form-group">
	<%= f.label :cost %>
	<%= f.text_field :cost %>
	</div>
	
	<div class="form-group">
	<%= f.label :image %>
	<%= f.url_field :image %>
	</div>
	
	<div class="form-group">
	<%= f.submit %>
	</div>

<% end %>

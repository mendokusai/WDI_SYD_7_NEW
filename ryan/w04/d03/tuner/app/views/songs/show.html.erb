<h2>Song</h2>

<h3><%= @song.name %></h3>

<ul>
<li>Year: <%= @song.year %></li>
<li>Genre: <%= @song.genre %></li>
<li>Length: <%= @song.length %></li>
</ul>

<%= link_to "Back", songs_path %>
<%= link_to "Edit", edit_song_path(@song) %>
<%= link_to "Delete", song_path(@song),
	method: :delete, data: { confirm: 'Are you sure?' } %>